@model Student

@{
    ViewData["Title"] = "Add Student";
}

<h1>Add student to @ViewBag.Course course</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@ViewBag.CourseId" name="CourseId" />

            <div class="form-group">
                @*<label asp-for="Id" class="control-label"></label>*@
                <select asp-for="Id" asp-items="@ViewBag.StudentId" class="form-control">
                    <option value="0">--Choose student--</option>
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
